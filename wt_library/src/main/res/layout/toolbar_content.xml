<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <LinearLayout
        android:id="@+id/left_click"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <!--左边返回-->
        <ImageView
            android:id="@+id/left_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/base_svg_ic_back"
            android:visibility="gone"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/left_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="?attr/skin_text_dark_color"
            android:textSize="15sp"
            android:visibility="gone"
            tools:text="杭州"
            tools:visibility="visible" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/right_click"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <ImageView
            android:id="@+id/icon_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:src="@drawable/base_svg_ic_back"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/text_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:textColor="?attr/skin_text_dark_color"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="菜单"
            tools:visibility="visible" />


    </LinearLayout>

    <!--中间标题-->
    <RelativeLayout
        android:id="@+id/bar_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:gravity="center">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:minWidth="70dp"
            android:textColor="?attr/skin_text_dark_color"
            android:textSize="17sp"
            android:textStyle="bold"
            tools:text="标题" />

    </RelativeLayout>

</RelativeLayout>
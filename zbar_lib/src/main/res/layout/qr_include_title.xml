<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/bar_parent"
                android:layout_width="match_parent"
                android:layout_height="44dp">

    <ImageView
        android:id="@+id/qr_back"
        android:layout_width="22dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/qr_icon_white_back"/>

    <TextView
        android:id="@+id/qr_text_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@id/qr_back"
        android:gravity="center"
        android:text="@string/qr_cancel"
        android:textColor="@color/qr_white"
        android:textSize="12sp"
        android:visibility="gone"
        tools:textColor="#f00"
        tools:visibility="visible"/>


    <TextView
        android:id="@+id/qr_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="@string/qr_scan_title"
        android:textColor="@color/qr_white"
        android:textSize="17sp"
        tools:textColor="#f00"/>

</RelativeLayout>